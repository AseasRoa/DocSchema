{
  "name": "docschema",
  "version": "1.1.2",
  "author": {
    "name": "AseasRoa"
  },
  "description": "Schema declaration and validation library using JsDoc comments",
  "license": "MIT",
  "type": "module",
  "types": "./types/global.d.ts",
  "main": "./lib/index.js",
  "browser": "./dist/bundle.js",
  "exports": {
    "types": "./types/global.d.ts",
    "browser": "./dist/bundle.js",
    "import": "./lib/index.js",
    "default": "./lib/index.js"
  },
  "imports": {
    "#docschema": {
      "default": "./lib/index.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "lint": "tsc --noEmit && eslint --config .eslintrc --ext .js,.ts ./",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "benchmark": "node benchmarks/index.js",
    "build": "vite build",
    "prepublishOnly": "npm run test && npm run build"
  },
  "devDependencies": {
    "@types/benchmark": "^2.1.5",
    "@types/node": "^20.10.5",
    "@vitest/coverage-v8": "^1.1.0",
    "benchmark": "^2.1.4",
    "eslint": "^8.56.0",
    "eslint-plugin-jsdoc": "^46.9.1",
    "eslint-plugin-vitest": "^0.3.18",
    "eslint-plugin-vitest-globals": "^1.4.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AseasRoa/DocSchema"
  },
  "homepage": "https://github.com/AseasRoa/DocSchema",
  "keywords": [
    "schema",
    "validation",
    "jsdoc"
  ]
}
